<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="security.access.owner_voter.class">Sonata\UserBundle\Security\Authorization\Voter\OwnerVoter</parameter>
        <parameter key="security.access.super_admin_voter.class">Sonata\UserBundle\Security\Authorization\Voter\SuperAdminVoter</parameter>
    </parameters>

    <services>
        <service id="security.access.owner_voter" class="%security.access.owner_voter.class%" public="false">
            <tag name="security.voter" />
        </service>

        <service id="security.access.super_admin_voter" class="%security.access.super_admin_voter.class%" public="false">
            <tag name="security.voter" />
        </service>
    </services>
</container>
